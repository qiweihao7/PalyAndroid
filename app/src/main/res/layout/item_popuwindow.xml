<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/iv"
          android:layout_width="20dp"
          android:layout_height="24dp"
          android:layout_margin="5dp"
          android:layout_centerVertical="true"
          android:background="@drawable/zjt_black"/>

      <EditText
          android:id="@+id/et_share"
          android:layout_width="230dp"
          android:layout_height="50dp"
          android:layout_toEndOf="@id/iv"
          android:drawableStart="@mipmap/sousuo"
          android:drawablePadding="10dp"
          android:layout_margin="5dp"
          android:background="@drawable/et"
          android:enabled="true"
          android:hint="发现更多干货"/>

      <Button
          android:layout_alignParentEnd="true"
          android:id="@+id/search_1"
          android:layout_marginTop="6dp"
          android:text="@string/search"
          android:textColor="@color/white"
          android:background="@drawable/select_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <!--<SearchView
          android:id="@+id/et_share"
          android:layout_width="200dp"
          android:layout_height="50dp"
          android:layout_toEndOf="@id/iv"

          android:layout_margin="5dp"
          android:background="@drawable/et"
          android:enabled="true"
          android:hint="发现更多干货"/>-->
      <!--<Button
          android:layout_width="80dp"
          android:layout_height="40dp"
          android:background="@drawable/sou"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:layout_alignParentEnd="true"
          android:layout_margin="4dp"
          android:text="@string/search"-->
  </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:text="@string/hot"/>

    <com.example.palyandroid.utils.FlowLayout
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/bule"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="@string/hon"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tv"
            android:layout_margin="5dp"
            android:background="@drawable/clear"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

</LinearLayout>
