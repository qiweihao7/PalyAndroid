<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_cecece"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/title_knowlager"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/info_knowlager"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/title_knowlager"
                android:layout_below="@+id/title_knowlager"
                android:lines="2"
                android:textColor="@color/c_cecece" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:src="@drawable/youjiantou" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>