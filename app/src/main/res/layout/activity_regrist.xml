<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gre"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.palyandroid.activitys.otherActivity.RegristActivity">

    <Button
        android:id="@+id/bt_back_r"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/zjt" />

    <RelativeLayout
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_name_re"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/youxiang_white"
            android:hint="邮箱/手机号"
            android:drawablePadding="15dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="@color/white"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,TextFields" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_password_re"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:drawablePadding="15dp"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/padlock"
            android:hint="输入密码"
            android:paddingLeft="20dp"
            android:password="true"
            android:textColorHint="@color/white"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,TextFields" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_password_re_two"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/padlock"
            android:hint="确认密码"
            android:password="true"
            android:drawablePadding="15dp"
            android:textColorHint="@color/white"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,TextFields" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_regrist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/select_button_regrist"
        android:text="@string/regrist"
        android:textColor="@color/white" />

</LinearLayout>
