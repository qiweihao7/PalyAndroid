<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_cecece7"
    tools:context="com.example.palyandroid.fragments.wechatFragments.WeChatFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_PROJECT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        app:tl_indicator_color="@color/org"
        app:tl_textSelectColor="@color/white"
        app:tl_textUnselectColor="@color/c_cecece"
        app:tl_divider_color="@color/org"
        app:tl_divider_width="@dimen/dp_1"
        app:tl_divider_padding="@dimen/dp_10"
        app:tl_indicator_corner_radius="@dimen/dp_5"
        app:tl_indicator_margin_left="@dimen/dp_5"
        app:tl_indicator_margin_right="@dimen/dp_5"
        app:tl_indicator_style="BLOCK" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_PROJECT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
